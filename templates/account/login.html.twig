{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <div class="jumbotron py-3 px-3">
                    <h1>Connectez-vous</h1>
                    {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenur, l'identifiant ou le mot de passe est invalide.</div>
                    {% endif %}
                    <form action='{{path("account_login")}}' method="post">
                        <div class="form-group">
                            <label for="email"></label>
                            <input name="_username" id="email" type="text" class="form-control border border-primary" placeholder="Votre e-mail" required value="{{username}}">
                        </div>
                        <div class="form-group">
                            <label for="password"></label>
                            <input name="_password" id="password" type="password" class="form-control border border-primary" placeholder="Votre mot de passe" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                Connexion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
